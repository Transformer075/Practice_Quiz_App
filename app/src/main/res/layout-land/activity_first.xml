<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF153250"
    tools:context=".FirstActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Practice and Quiz App"
        app:titleTextColor="#0629EF" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="52dp"
        android:shadowColor="#3042AA"
        android:text="@string/textViewName"
        android:textColor="@color/teal_200"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textViewRollNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/textViewRollNo"
        android:textColor="@color/teal_200"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/textViewName"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="248dp"
        android:layout_height="250dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/imag1"
        app:layout_constraintBottom_toBottomOf="@+id/btn_repo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewName" />

    <Button
        android:id="@+id/btn_secondActivity"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="@string/secondActivity"
        app:layout_constraintStart_toStartOf="@+id/btn_repo"
        app:layout_constraintTop_toBottomOf="@+id/btn_repo" />

    <Button
        android:id="@+id/btn_thirdActivity"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:text="@string/thirdActivity"
        app:layout_constraintBottom_toBottomOf="@+id/btn_secondActivity"
        app:layout_constraintStart_toEndOf="@+id/btn_secondActivity"
        app:layout_constraintTop_toTopOf="@+id/btn_secondActivity"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_repo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/btn_repo"
        app:layout_constraintStart_toStartOf="@+id/textViewRollNo"
        app:layout_constraintTop_toBottomOf="@+id/textViewRollNo" />

</androidx.constraintlayout.widget.ConstraintLayout>